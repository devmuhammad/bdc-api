{
    "compilerOptions": {
        "removeComments": true,
        "lib": ["es5", "es6"],
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,    
        "sourceMap": true,
        "alwaysStrict": true,
        "outDir": "./dist",
        "baseUrl": "./"
    },
    "exclude": [
        "node_modules"
    ]
}
  
